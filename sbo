<body>
    <h1>Invia una richiesta al server</h1>
    <form id="contactForm">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" required>
        <br><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <br><br>
        <label for="message">Messaggio:</label>
        <textarea id="message" name="message" rows="4" required></textarea>
        <br><br>
        <button type="submit">Invia</button>
    </form>

    <script>
        // Aggiungi un listener al form per intercettare il submit
        document.getElementById('contactForm').addEventListener('submit', async (e) => {
            e.preventDefault(); // Evita il comportamento predefinito del form
            const formData = {
                name: document.getElementById('name').value,
                email: document.getElementById('email').value,
                message: document.getElementById('message').value,
            };

            try {
                // Invia i dati al server
                const response = await fetch('http://localhost:3000/submit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                });

                const result = await response.text();
                alert(result); // Mostra la risposta dal server
            } catch (error) {
                console.error('Errore durante lâ€™invio dei dati:', error);
            }
        });
    </script>
</body>
